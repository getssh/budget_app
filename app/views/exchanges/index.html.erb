<p style="color: green"><%= notice %></p>

<div class="d-flex justify-content-between bg-primary">
  <div class="mt-3">
    <%= link_to "Back", categories_path, class: "btn btn-secondary" %>
  </div>
  <h3 class="text-white bg-primary py-3 pl-4 mb-4 w-100 blue">Transaction</h3>
</div>

<h1><%= @category.name %> Exchanges</h1>

<p>Total Amount: <%= @category.exchanges.sum(:amount) %></p>

<% @category.exchanges.order(created_at: :desc).each do |exchange| %>
  <div class="border p-3 mb-1">
    <h3><%= exchange.name %></h3>
    <p>Amount: <%= exchange.amount %></p>
  </div>
<% end %>

<%= link_to "Add a new transaction", new_category_exchange_path(@category), class: "btn btn-success py-3 w-100" %>
