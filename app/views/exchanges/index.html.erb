<p style="color: green"><%= notice %></p>

<div class="d-flex justify-content-between topg">
  <div class="mt-3">
    <%= link_to "<", categories_path, class: "btn btn-secondary" %>
  </div>
  <h3 class="text-white text-center topg py-3 pl-4 mb-4 w-100 blue">Transaction</h3>
</div>

<h1 class="text-center"><%= @category.name %></h1>

<p class="text-right pr-2">Total Amount: <%= @category.exchanges.sum(:amount) %></p>

<div class="bg-white p-1 my-3">
  <% @category.exchanges.order(created_at: :desc).each do |exchange| %>
    <div class="border p-3 mb-1">
      <h3 class="text-cetner"><%= exchange.name %></h3>
      <p>Amount: <%= exchange.amount %></p>
    </div>
  <% end %>
</div>

<%= link_to "Add a new transaction", new_category_exchange_path(@category), class: "btn btn-success bottomg py-3 w-100" %>
