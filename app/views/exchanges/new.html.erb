<div class="d-flex justify-content-between bg-primary">
  <div class="mt-3">
    <%= link_to "Back", category_exchanges_path(id: @category.id), class: "btn btn-secondary" %>
  </div>
  <h3 class="text-white bg-primary py-3 pl-4 mb-4 w-100 blue">New Exchange</h3>
</div>

<%= form_with(model: [@category, @exchange]) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :amount %>
    <%= form.text_field :amount, class: "form-control" %>
  </div>

  <div class="form-group">
    <p>Categories:</p>
    <%= form.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
      <div class="form-check">
        <%= cb.check_box %>
        <%= cb.label %>
      </div>
    <% end %>
  </div>

  <%= form.hidden_field :author_id, value: current_user.id %>

  <div>
    <%= form.submit "Save", class: "btn btn-primary w-100 login-link" %>
  </div>
<% end %>
