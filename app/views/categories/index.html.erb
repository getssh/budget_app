<p style="color: green"><%= notice %></p>

<div class="d-flex justify-content-between bg-primary">
  <h3 class="text-white bg-primary py-3 pl-4 mb-4 w-100 blue">Categories</h3>
  <small>
    <%= button_to "Log Out", destroy_user_session_path, method: :delete, class: 'sign-out-button btn btn-secondary mt-2 mr-1' %>
  </small>

</div>

<% @categories.each do |category| %>
  <div class="row bg-white p-3 mb-3 mx-1">

    <div class="col-md-4 col-3 text-center">
      <img src="<%= category.icon%>" alt="image" class="d-block mx-auto mb-3" style="max-width: 100px;">
    </div>

    <div class="col-md-4 col-6 text-center">
      <h5>
        <%= link_to category.name, category_exchanges_path(category) %>
      </h5>
      <p><%= category.created_at.strftime("%d %B %Y") %></p>
    </div>

    <div class="col-md-4 col-3 text-center">
      <p><%= category.exchanges.sum(:amount) %></p>
    </div>
  </div>
<% end %>

<%= link_to "Add a new category", new_category_path, class: "btn btn-success w-100 green" %>