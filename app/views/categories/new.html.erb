

<div class="d-flex justify-content-between bg-primary">
  <div class="mt-3">
    <%= link_to "Back", categories_path, class: "btn btn-secondary" %>
  </div>
  <h3 class="text-white bg-primary py-3 pl-4 mb-4 w-100 blue">New category</h3>
</div>

<!-- Form with Bootstrap styling -->
<%= form_with(model: @category) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :icon %>
    <%= form.text_field :icon, class: "form-control" %>
  </div>

  <div>
    <%= form.submit "Save", class: "btn btn-primary login-link w-100" %>
  </div>
<% end %>
